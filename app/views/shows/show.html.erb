<% if @show.show_listings.empty? %>
  <%= "No Show Listings for #{@show.name}" %>
<% else %>
  <% @show.show_listings.each do |listing| %>
    <%= "#{@show.name} is showing on #{listing.channel.name} on #{listing.date}" %>
  <% end %>
<% end %>


<%= link_to "Edit", edit_show_path(@show) %>

<%= link_to "New Show Listing", new_show_listing_path %>
